{
  "root": true,
  "extends": [
    "@nuxtjs/eslint-config",
    "@nuxtjs/eslint-config-typescript"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "max-len": ["error", {
      "code": 100,
      "ignoreTemplateLiterals": true,
      "ignoreUrls": true
    }],
    "vue/multi-word-component-names": "off",
    "vue/no-multiple-template-root": "off",
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}
